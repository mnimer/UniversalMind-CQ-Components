<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Placeholder Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Image Properties">
                <items jcr:primaryType="cq:WidgetCollection">
                    <listFrom
                        jcr:primaryType="cq:Widget"
                        defaultValue="lorempixel.com"
                        fieldLabel="Image Service"
                        name="./imageservice"
                        type="select"
                        xtype="selection">
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            loadContent=""
                            selectionchanged=""/>
                        <options jcr:primaryType="cq:WidgetCollection">
                            <lorem
                                jcr:primaryType="nt:unstructured"
                                text="lorempixel.com"
                                value="lorempixel.com"/>
                            <placehold
                                jcr:primaryType="nt:unstructured"
                                text="placehold.it"
                                value="placehold.it"/>
                            <dummyimage
                                jcr:primaryType="nt:unstructured"
                                text="dummyimage.com"
                                value="dummyimage.com"/>
                            <bacon
                                jcr:primaryType="nt:unstructured"
                                text="Bacon (baconmockup.com)"
                                value="baconmockup.com"/>
                            <kitten
                                jcr:primaryType="nt:unstructured"
                                text="Kittens (placekitten.com)"
                                value="placekitten.com"/>
                            <dog
                                jcr:primaryType="nt:unstructured"
                                text="Dogs (placedog.com)"
                                value="placedog.com"/>
                            <bears
                                jcr:primaryType="nt:unstructured"
                                text="Bears (placebear.com)"
                                value="placebear.com"/>
                        </options>
                    </listFrom>
                    <prop2
                        jcr:primaryType="nt:unstructured"
                        fieldLabel="width"
                        name="./width"
                        validateOnBlur="true"
                        xtype="numberfield"/>
                    <prop3
                        jcr:primaryType="nt:unstructured"
                        fieldLabel="height"
                        name="./height"
                        validateOnBlur="true"
                        xtype="numberfield"/>
                    <prop4
                        jcr:primaryType="nt:unstructured"
                        fieldLabel="Alt Text / Tooltip"
                        name="./tooltip"
                        validateOnBlur="true"
                        xtype="textarea"/>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
