                    jcr:primaryType="nt:unstructured"
                    allowBlank="true"
                    fieldDescription="Additional CSS classes to apply to element"
                    fieldLabel="CSS Class"
                    name="./cssClass"
                    validateOnBlur="true"
                    xtype="textfield"/>
